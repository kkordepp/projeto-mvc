@model Agenda.Presentation.Models.AccountLoginModel

@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}

<div class="text-center">
    <h3 class="text-primary"><strong>Agenda de contatos:</strong></h3>
    <h4>Acesso ao sistema</h4>
    <hr></hr>
</div>

@using (Html.BeginForm())
{
        <div class="mb-2">
            <label>Email de acesso: </label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control"})
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="mb-2">
            <label>Senha de acesso: </label>
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control"})
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Senha)
            </div>

            <div class="text-end">
                <a href="/Account/Password">Esqueci minha senha?</a>
            </div>
        </div>

        <div class="mb-2">
            <div class="d-grid">
                <input type="submit" class="btn btn-success" value="Acessar Agenda"/>
            </div>
        </div>

        <div class="mb-2">
            <div class="d-grid">
                <a href="/Account/Register" class="btn btn-primary">
                    Não possui conta? <strong>Cadastre-se aqui!</strong>
                </a>
            </div>
        </div>

        <div class="mb-2">
            <div class="text-center text-danger">
                <strong>
                    @TempData["Mensagem"]
                </strong>
            </div>
        </div>
}